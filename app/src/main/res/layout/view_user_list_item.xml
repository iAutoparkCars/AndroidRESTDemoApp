<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data >

    </data>
    <!--<variable
        name="collection"
        type="com.mobile.songlist.viewmodels.Track"/>-->

    <RelativeLayout
        android:id="@+id/list_item_root"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:clickable="true"
        android:onClick="@{() -> cell.onTrackViewClick()}"

        >

        <TextView
            android:id="@+id/user_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/user_list_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="id"
            android:textSize="18dp"
            android:textStyle="normal"/>


        <TextView
            android:id="@+id/user_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/user_list_id"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="name"
            android:textSize="18dp"
            android:textStyle="normal"/>
        <!--android:text="@{track.trackName}"-->

        <TextView
            android:id="@+id/user_list_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/user_list_name"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/user_list_id"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="2"
            android:paddingTop="8dp"
            android:text="email"
            android:textSize="15dp"
            android:textStyle="italic"/>

        <!--android:text="@{track.collectionName}"-->

    </RelativeLayout>

</layout>
